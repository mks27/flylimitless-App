<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flylimitless.flylimitless.ticketActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/wat"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="-32dp">

        <TextView
            android:id="@+id/viewticket"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Your Ticket"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="#ff3399"
            />

        <TextView
            android:id="@+id/vfno"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Flight No.:"
            android:textColor="#339966"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/viewticket"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/viewticket"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vfrom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="From:"
            android:textColor="#339966"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/vfno"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vsource"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:alpha="0.5"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/vfno"
            android:background="#fdf5e6"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vto"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="To:"
            android:textColor="#339966"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/vfno"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vdest"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:alpha="0.5"
            android:layout_marginLeft="210dp"
            android:layout_below="@+id/vfno"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#fdf5e6"
            />

        <TextView
            android:id="@+id/tdept"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Departure:"
            android:textColor="#339966"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/vdest"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vdept"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:alpha="0.5"
            android:background="#fdf5e6"
            android:layout_marginLeft="110dp"
            android:layout_below="@+id/vdest"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tarri"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Arrival:"
            android:textColor="#339966"
            android:layout_marginLeft="200dp"
            android:layout_below="@+id/vdest"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/varri"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
