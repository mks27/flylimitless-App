<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flylimitless.flylimitless.bookflightActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/wat"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="-32dp">


        <RadioButton
            android:id="@+id/rb_oneway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="82dp"
            android:text="One Way"
            android:onClick="onclickradio"/>

        <RadioButton
            android:id="@+id/rb_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp"
            android:text="Round Trip"
            android:checked="true"
            android:layout_alignTop="@+id/rb_oneway"
            android:onClick="onclickradio"/>

        <Spinner
            android:id="@+id/sp_from"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rb_oneway"
            android:layout_marginStart="37dp"
            android:layout_marginTop="32dp"
            android:textColor="#FF000000"
            android:spinnerMode="dropdown"
            android:background="#fdf5e6"
            android:alpha="0.5"/>

        <Spinner
            android:id="@+id/sp_to"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rb_oneway"
            android:layout_marginStart="198dp"
            android:layout_marginTop="32dp"
            android:background="#fdf5e6"
            android:textColor="#FF000000"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/departdate"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_below="@+id/sp_from"
            android:layout_marginTop="32dp"
            android:layout_marginStart="37dp"
            android:text="Depart Date"
            android:textAlignment="center"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/returndate"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_below="@+id/sp_from"
            android:layout_marginTop="32dp"
            android:layout_marginStart="198dp"
            android:text="Return Date"
            android:textAlignment="center"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/adultview"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_below="@+id/departdate"
            android:layout_marginTop="32dp"
            android:layout_marginStart="37dp"
            android:text="Adult"
            android:textAlignment="center"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/childview"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_below="@+id/departdate"
            android:layout_marginTop="32dp"
            android:layout_marginStart="139dp"
            android:text="child"
            android:textAlignment="center"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/infantview"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_below="@+id/departdate"
            android:layout_marginTop="32dp"
            android:layout_marginStart="244dp"
            android:text="Infant"
            android:textAlignment="center"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/adult_sp"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/adultview"
            android:layout_marginStart="37dp"
            android:layout_marginTop="20dp"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textColor="#FF000000" />

        <Spinner
            android:id="@+id/child_sp"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/adultview"
            android:layout_marginStart="139dp"
            android:layout_marginTop="20dp"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textColor="#FF000000" />

        <Spinner
            android:id="@+id/infant_sp"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/adultview"
            android:layout_marginStart="244dp"
            android:layout_marginTop="20dp"
            android:background="#fdf5e6"
            android:alpha="0.5"
            android:textColor="#FF000000" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="Search" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
