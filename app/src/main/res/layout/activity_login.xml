<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flylimitless.flylimitless.LoginActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@drawable/background">

        <EditText
            android:id="@+id/textemail"
            android:hint="Enter Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/textpass"
            android:hint="Enter Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textemail" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:textSize="23sp"
            android:text="Login" />

        <TextView
            android:id="@+id/textalready1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#ff6600"
            android:text="Not Registered? SignUp" />

        <TextView
            android:id="@+id/usertext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textemail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:textSize="22sp"
            android:textColor="#ff0000"
            android:text="User Login" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
