        <activity android:name=".fstatusActivity" />
        <activity android:name=".fscheduleActivity" />
        <activity android:name=".enterdetailsActivity" />
        <activity android:name=".UploadData" />
        <activity android:name=".afterbooknowActivity" />
        <activity android:name=".settingActivity" />
        <activity android:name=".searchcancelledfActivity" />
        <activity android:name=".paymentActivity" />
        <activity android:name=".ticketActivity" />
